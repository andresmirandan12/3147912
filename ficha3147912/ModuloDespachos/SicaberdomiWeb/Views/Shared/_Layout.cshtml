@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using SicaberdomiWeb.Models @* Para acceder a ApplicationUser *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SICABERDOMI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        /* Variables y ajustes generales */
        :root {
            --sidebar-width: 250px;
            --primary-color: #34495e; /* Azul oscuro profesional */
            --accent-color: #1abc9c; /* Verde turquesa (acento) */
            --text-color: #ecf0f1;
        }

        /* Estructura Principal */
        #wrapper {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        /* Menú Lateral (Sidebar) */
        #sidebar-wrapper {
            width: var(--sidebar-width);
            background-color: var(--primary-color);
            color: var(--text-color);
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            position: fixed; /* Fijo para que no se mueva con el scroll */
            height: 100%;
            padding-top: 20px;
            z-index: 1000;
            overflow-y: auto;
        }

        .sidebar-heading {
            padding: 1.5rem 1.25rem;
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--accent-color);
            text-align: center;
        }

        /* Modificación para enlaces y botones dentro del sidebar (para eliminar puntos) */
        #sidebar-wrapper a, #sidebar-wrapper button {
            list-style: none !important;
            display: block;
        }

        .list-group-item {
            background-color: transparent;
            color: rgba(255, 255, 255, 0.7);
            border: none !important; /* FORZAMOS A ELIMINAR CUALQUIER BORDE */
            border-bottom: 0px !important; /* ESTA LÍNEA DEBE ELIMINAR LA DIVISIÓN */
            padding: 1rem 1.25rem;
            border-left: 5px solid transparent;
            transition: all 0.2s ease-in-out;
            list-style: none !important;
        }

            .list-group-item:hover, .list-group-item.active {
                color: white;
                background: #2c3e50; /* Tono más oscuro al pasar el mouse */
                border-left-color: var(--accent-color);
                text-decoration: none;
            }

        /* Contenido Principal */
        #page-content-wrapper {
            width: 100%;
            padding: 20px;
            margin-left: var(--sidebar-width); /* Empuja el contenido para dejar espacio al sidebar */
            transition: margin 0.3s;
        }

        .content-header {
            padding-bottom: 20px;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
        }
    </style>
</head>

<body>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">SICABERDOMI</div>

            <div class="list-group list-group-flush">

                @* ENLACES COMUNES (Home, etc.) - SE AGREGA border-0 *@
                <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action border-0"><i class="bi bi-house-door me-2"></i> Inicio</a>

                @* ENLACES DE ADMINISTRADOR - SE AGREGA border-0 *@
                @if (User.IsInRole("Admin"))
                {
                    <div class="mt-3 mb-1 ms-3 text-secondary small fw-bold">ADMINISTRACIÓN</div>
                    <a href="@Url.Action("Domiciliarios", "Admin")" class="list-group-item list-group-item-action border-0"><i class="bi bi-people-fill me-2"></i> Gestión Domiciliarios</a>
                    <a href="@Url.Action("Index", "ComentarioClientes")"
                       class="list-group-item list-group-item-action border-0">
                        <i class="bi bi-chat-dots me-2"></i> Ver Comentarios
                    </a>

                    <a href="@Url.Action("Index", "Pedidos")" class="list-group-item list-group-item-action border-0"><i class="bi bi-box-seam me-2"></i> Gestión de Pedidos</a>
                }

                @* ENLACES DE DOMICILIARIO - SE AGREGA border-0 *@
                @if (User.IsInRole("Domiciliario"))
                {
                    <div class="mt-3 mb-1 ms-3 text-secondary small fw-bold">OPERACIONES</div>
                    <a href="@Url.Action("Index", "Pedidos")" class="list-group-item list-group-item-action border-0"><i class="bi bi-bicycle me-2"></i> Pedidos Asignados</a>
                    <a href="#" class="list-group-item list-group-item-action border-0"><i class="bi bi-check-circle me-2"></i> Historial Entregas</a>
                }

                <div class="mt-4 mb-1 ms-3 text-secondary small fw-bold">CUENTA</div>
                @* Llamada al parcial (el parcial también tendrá border-0) *@
                <partial name="_LoginPartialSidebar" />

            </div>
        </div>
        <div id="page-content-wrapper">

            <header class="content-header d-flex justify-content-between align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    <h5 class="mb-0 text-muted">Bienvenido, @User.Identity.Name</h5>
                }
                else
                {
                    <h5 class="mb-0 text-muted">Bienvenido, Invitado</h5>
                }
                <div class="d-flex">
                </div>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted fixed-bottom">
                <div class="container-fluid ps-5">
                    &copy; 2025 - SicaberdomiWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                </div>
            </footer>
        </div>
    </div>

    @* SCRIPTS BASE (SIEMPRE NECESARIOS) *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* --- ÚNICA LLAMADA A RENDERSECTION: CARGA LOS SCRIPTS DE LAS VISTAS INDIVIDUALES --- *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>