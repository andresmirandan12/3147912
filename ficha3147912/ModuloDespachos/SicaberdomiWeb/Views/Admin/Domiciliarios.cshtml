@model IEnumerable<SicaberdomiWeb.Models.ApplicationUser>

@{
    ViewData["Title"] = "Gestión de Domiciliarios";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<p>
    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Crear Nuevo Domiciliario</a>
</p>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="bg-dark text-white">
        <tr>
            <th>Email</th>
            <th>Nombre de Usuario</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@(item.PhoneNumber ?? "N/A")</td>
                <td>
                    <a asp-action="EditDomiciliario" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a>
                    <a asp-action="DeleteDomiciliario" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>