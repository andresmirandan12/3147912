/* ------------------------------------------------------------------
   Safety overrides: force any remaining cyan/neon inline styles to use
   the agreed green accent. Select elements whose inline style contains
   the old cyan hex and override color, border-color, box-shadow and
   text-shadow so the whole site looks consistent without editing all
   remaining views. Uses !important to override inline styles.
   ------------------------------------------------------------------ */

[style*="#00E1FF"],
[style*="#00aEEF"],
[style*="#00AEEF"],
[style*="#00e1ff"] {
  color: var(--tn-accent) !important;
  border-color: rgba(47,182,90,0.12) !important;
  box-shadow: 0 0 12px rgba(47,182,90,0.08) !important;
  text-shadow: 0 0 8px rgba(47,182,90,0.12) !important;
  background: transparent !important;
}

/* Specific common inline variants (with alpha) */
[style*="#00E1FF55"], [style*="#00E1FF33"], [style*="#00E1FF22"] {
  border-color: rgba(47,182,90,0.12) !important;
  box-shadow: 0 0 10px rgba(47,182,90,0.08) !important;
}

/* Replace inline cyan badges/shadows */
[style*="#00E1FF;color"] , [style*="#00E1FF; color"] {
  color: var(--tn-accent) !important;
}

/* If any element still forces a neon cyan background, make it dark */
[style*="#00E1FF;background"], [style*="#00AEEF;background"] {
  background: transparent !important;
}
