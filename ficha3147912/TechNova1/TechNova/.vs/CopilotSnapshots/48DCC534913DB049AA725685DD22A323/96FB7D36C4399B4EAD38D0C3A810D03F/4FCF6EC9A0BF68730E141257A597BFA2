                    <th>Precio</th>
                    <th>Inventario</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom:1px solid #00E1FF33;">
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio.ToString("C")</td>
                        <td>
                            @if (item.Stock == 0)
                            {
                                <span class="badge"
                                      style="background:#FF4C4C;color:#121212;">0</span>
                            }
                            else if (item.Stock < 10)
                            {
                                <span class="badge"
                                      style="background:#FFC107;color:#121212;">@item.Stock</span>
                            }
                            else
                            {
                                <span class="badge"
                                      style="background:#00E676;color:#121212;">@item.Stock</span>
                            }
                        </td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ProductoId"
                               class="btn btn-sm text-dark fw-bold"
                               style="background:#00E1FF;border:none;border-radius:6px;
                                          box-shadow:0 0 6px #00E1FF;">
                                Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@item.ProductoId"
                               class="btn btn-sm text-dark fw-bold"
                               style="background:#181818;border:1px solid #00E1FF55;
                                          border-radius:6px;box-shadow:0 0 4px #00E1FF;">
                                Detalles
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.ProductoId"
                               class="btn btn-sm text-dark fw-bold"
                               style="background:#FF4C4C;border:none;border-radius:6px;
                                          box-shadow:0 0 6px #FF4C4C;">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
