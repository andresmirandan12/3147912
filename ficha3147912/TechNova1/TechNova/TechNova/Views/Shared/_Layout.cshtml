<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechNova</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Estilos personalizados – Tema oscuro con acento verde -->
    <style>
        /* Cuerpo y texto general */
        body {
            background: #0F0F0F;
            color: #E6EFE6; /* texto claro neutro */
            font-family: 'Segoe UI', sans-serif;
        }

        /* Navbar con acento verde */
        .navbar-dark {
            background: #101212 !important;
            border-bottom: 1px solid #0f1a14;
        }

            .navbar-dark .navbar-brand,
            .navbar-dark .nav-link {
                color: #2fb65a !important; /* acento verde */
                font-weight: 600;
                text-shadow: 0 0 6px rgba(47,182,90,0.18);
            }

                .navbar-dark .nav-link:hover {
                    color: #1f7a45 !important;
                    text-shadow: 0 0 8px rgba(47,182,90,0.22);
                }

        /* Links generales */
        a {
            color: #2fb65a;
            text-shadow: 0 0 4px rgba(47,182,90,0.14);
        }

            a:hover {
                color: #1f7a45;
                text-shadow: 0 0 8px rgba(47,182,90,0.18);
            }

        /* Footer */
        footer {
            background: #101212;
            color: #9dbba9;
            border-top: 1px solid #0f1a14;
            text-shadow: none;
        }

        /* Contenedores y cards */
        .container, .card, .shadow {
            color: #E6EFE6;
        }

        /* Botones con acento verde */
        .btn-neon {
            background: #2fb65a;
            color: #08110a;
            border: none;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(47,182,90,0.18);
            transition: 0.2s;
        }

            .btn-neon:hover {
                background: #1f7a45;
                box-shadow: 0 0 14px rgba(47,182,90,0.22);
            }

        /* Tablas */
        .table-futurista {
            background: #151515;
            color: #E6EFE6;
            border-radius: 10px;
        }

            .table-futurista thead {
                background: #1f7a45;
                color: #eaf7ef;
                text-shadow: 0 0 4px rgba(47,182,90,0.08);
            }

            .table-futurista tbody tr {
                border-bottom: 1px solid rgba(47,182,90,0.06);
            }

        /* Inputs y selects */
        .form-control, .form-select {
            background: #101010;
            color: #E6EFE6;
            border: 1px solid rgba(47,182,90,0.08);
            border-radius: 10px;
        }

        .form-label {
            color: #2fb65a;
        }
    </style>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechNova.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cpu"></i> TechNova
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>

                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Productoes" asp-action="Index">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Ventas" asp-action="Index">Ventas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DetalleVentas" asp-action="Index">Detalle Ventas</a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container pb-3">
        @RenderBody()
    </div>

    <footer class="footer py-3">
        <div class="container text-center">
            &copy; 2025 - TechNova |
            <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
