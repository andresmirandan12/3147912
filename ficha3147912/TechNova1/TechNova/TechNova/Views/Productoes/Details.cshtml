@model TechNova.Models.Producto

@{
    ViewData["Title"] = "Detalles";
}

<div class="container col-7 mt-5 p-4 rounded tn-details-card">

    <div class="tn-details-header">
        <h1>Detalles del Producto</h1>
    </div>

    <div class="tn-details-inner">
        <dl class="row small">
            <dt class="col-sm-4 detail-label">Nombre:</dt>
            <dd class="col-sm-8 detail-value">@Model.Nombre</dd>

            <dt class="col-sm-4 detail-label">Descripción:</dt>
            <dd class="col-sm-8 detail-value">@Model.Descripcion</dd>

            <dt class="col-sm-4 detail-label">Precio:</dt>
            <dd class="col-sm-8 detail-value">@Model.Precio.ToString("C")</dd>

            <dt class="col-sm-4 detail-label">Stock:</dt>
            <dd class="col-sm-8 detail-value">@Model.Stock</dd>
        </dl>
    </div>

    <div class="text-center mt-3 btn-action-space">
        <a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-neon fw-bold">
            Editar
        </a>
        <a asp-action="Index" class="btn btn-cancel-custom fw-bold">
            Volver
        </a>
    </div>
</div>
