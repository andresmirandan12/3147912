@model TechNova.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="tn-form">
    <h1 class="tn-title text-center fw-bold mb-4">➕ Registrar Producto</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger small"></span>
            </div>

            <div class="form-group full-row">
                <label asp-for="Descripcion"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger small"></span>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-secondary">⬅ Volver</a>
            <button type="submit" class="btn btn-primary">Guardar Producto</button>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
