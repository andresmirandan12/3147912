@model TechNova.Models.DetalleVenta

@{
    ViewData["Title"] = "Detalle de Venta";
}

<div class="container col-7 mt-5 p-4 rounded shadow-sm tn-index-box"
     style="color:var(--tn-primary-contrast); border:1px solid rgba(17,34,20,0.6);">

    <h2 class="fw-bold text-center mb-4"
        style="color:var(--tn-accent); text-shadow:0 0 8px rgba(47,182,90,0.12);">
        Información del Detalle
    </h2>

    <div class="p-4 rounded"
         style="background:#141414;border:1px solid rgba(47,182,90,0.12);box-shadow:inset 0 0 10px rgba(47,182,90,0.04);">
        <dl class="row">

            <dt class="col-sm-4 fw-semibold" style="color:var(--tn-accent);">Cantidad</dt>
            <dd class="col-sm-8">@Model.Cantidad</dd>

            <dt class="col-sm-4 fw-semibold" style="color:var(--tn-accent);">Precio Unitario</dt>
            <dd class="col-sm-8">@Model.PrecioUnitario.ToString("C")</dd>

            <dt class="col-sm-4 fw-semibold" style="color:var(--tn-accent);">Producto</dt>
            <dd class="col-sm-8">@Model.Producto.Nombre</dd>

            <dt class="col-sm-4 fw-semibold" style="color:var(--tn-accent);">Venta</dt>
            <dd class="col-sm-8">@Model.VentaId</dd>

        </dl>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index"
           class="btn px-4 fw-bold btn-neon"
           style="color:#08110a;">
            Regresar
        </a>
    </div>
</div>
