@model IEnumerable<TechNova.Models.DetalleVenta>
@{
    ViewData["Title"] = "Detalle de Ventas";
}

<div class="container mt-4">

    <h2 class="mb-4 text-center fw-bold"
        style="color:var(--tn-accent);text-shadow:0 0 12px rgba(47,182,90,0.12);">
        Registro de Detalles Vendidos
    </h2>

    <div class="rounded p-1"
         style="background:#0F0F0F;
                border:1px solid #1A1A1A;
                box-shadow:0 0 18px rgba(47,182,90,0.12);">
    <div class="rounded p-1 tn-index-box">

        <table class="table table-hover align-middle mb-0"
               style="background:#111;color:#D9EFFF;
                      border-radius:10px;overflow:hidden;">

            <thead style="background:var(--tn-surface);color:var(--tn-primary-contrast);">
                <tr>
                    <th>Detalle</th>
                    <th>Venta</th>
                    <th>Producto</th>
                    <th>Cant.</th>
                    <th class="text-end">Precio</th>
                    <th class="text-end">Subtotal</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="transition:0.2s;">
                        <td>#@item.DetalleId</td>

                        <td style="color:var(--tn-accent);text-shadow:0 0 6px rgba(47,182,90,0.12);">
                            Venta @item.VentaId
                        </td>

                        <td>@item.Producto.Nombre</td>

                        <td class="text-center">@item.Cantidad</td>

                        <td class="text-end">@item.PrecioUnitario.ToString("C")</td>

                        <td class="text-end fw-bold"
                            style="color:#00E676;text-shadow:0 0 6px #00E676;">
                            @((item.Cantidad * item.PrecioUnitario).ToString("C"))
                        </td>

                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.DetalleId"
                               class="btn btn-sm fw-bold text-dark btn-neon">
                                Ver
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

    <div class="text-center mt-3">
        <a asp-controller="Ventas" asp-action="Index"
           class="fw-bold text-decoration-none"
           style="color:var(--tn-accent);text-shadow:0 0 6px rgba(47,182,90,0.12);">
            <i class="bi bi-arrow-left"></i> Volver a Ventas
        </a>
    </div>
</div>
