@model TechNova.Models.DetalleVenta

@{
    ViewData["Title"] = "Editar Detalle";
}

<div class="container col-6 mt-5 p-4 rounded"
     style="background:#0F0F0F;color:#D9EFFF;
            border:1px solid #1A1A1A;box-shadow:0 0 18px #00E1FF55;">

    <h2 class="text-center fw-bold mb-4"
        style="color:#00E1FF;text-shadow:0 0 12px #00E1FF;">
        ✏ Editar Detalle
    </h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="DetalleId" />

        <div class="mb-3">
            <label asp-for="VentaId" class="form-label" style="color:#00E1FF;"></label>
            <select asp-for="VentaId" asp-items="ViewBag.VentaId"
                    class="form-select"
                    style="background:#181818;border:1px solid #00E1FF55;
                           color:#D9EFFF;border-radius:10px;">
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="ProductoId" class="form-label" style="color:#00E1FF;"></label>
            <select asp-for="ProductoId" asp-items="ViewBag.ProductoId"
                    class="form-select"
                    style="background:#181818;border:1px solid #00E1FF55;
                           color:#D9EFFF;border-radius:10px;">
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Cantidad" class="form-label" style="color:#00E1FF;"></label>
            <input asp-for="Cantidad" class="form-control"
                   style="background:#181818;border:1px solid #00E1FF55;
                          color:#D9EFFF;border-radius:10px;" />
        </div>

        <div class="mb-3">
            <label asp-for="PrecioUnitario" class="form-label" style="color:#00E1FF;"></label>
            <input asp-for="PrecioUnitario" class="form-control"
                   style="background:#181818;border:1px solid #00E1FF55;
                          color:#D9EFFF;border-radius:10px;" />
        </div>

        <button type="submit"
                class="btn w-100 fw-bold text-dark"
                style="background:#00E1FF;border:none;border-radius:10px;
                       box-shadow:0 0 10px #00E1FF;">
            Guardar Cambios
        </button>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Index"
           class="text-decoration-none"
           style="color:#00E1FF;text-shadow:0 0 6px #00E1FF;">
            ⬅ Volver
        </a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
