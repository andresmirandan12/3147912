@model SICABER.Models.CategoriaInsumo

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h1>¿Seguro que deseas eliminar esta categoría?</h1>

<div>
    <h4>@Model.Nombre</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">
            @(Model.Activo ? "Sí" : "No")
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
